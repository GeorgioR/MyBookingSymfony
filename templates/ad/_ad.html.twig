{% set url=path('ads_single',{'slug':ad.slug}) %}
            <div class="col-md-4">
            
                <div class="card">
                
                    <div class="card-header bg-dark text-light"> {{ad.rooms}} chambres {{ad.price}}€/nuit</div>
                        <div class="card-body">
                            <a href="{{url}}">
                                <img src="{{ad.coverImage}}" style="height:200px;width:100%;display:block" alt="{{ad.title}}">
                            </a>
                            <h4 class="card-title mt-3">{{ad.title}}</h4>
                            <p class="card-text">{{ad.introduction}}</p>
                            <a href="{{url}}" class="btn btn-warning">Plus d'infos</a>

                            {% if app.user and app.user == ad.author %}
                              <a href="{{path('ads_edit',{'slug':ad.slug})}}" class="btn btn-secondary">Modifier</a>
                              
                             {% endif %}
                        </div>
                   
                   <div class="card-footer text-muted">
                    <span>Pas encore noté</span>
                   </div>
                
                </div>
            
            </div>