{% extends 'admin/base.html.twig' %}

{% block title %}Administration des annonces.{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="my-5">Gestion des annonces.</h1>

        <table class="table table-hover">
            <thead class="table-dark">
                <th>Id</th>
                <th>Titre</th>
                <th>Auteur</th>
                <th class="text-center">Reservations</th>
                <th class="text-center">Note</th>
                <th>Actions</th>
            </thead>

            <tbody>
            {% for ad in ads %}
                <tr>
                    <td>{{ad.id}}</td>
                    <td>{{ad.title}}</td>
                    <td><img src="{{ad.author.avatar}}" alt="Avatar de {{ad.author.fullName}}" class="avatar avatar-small"><br>
                    {{ad.author.fullName}}</td>
                    <td class="text-center"> <span class="badge badge-warning rounded btn-sm">{{ad.bookings|length}}</span></td>
                    <td class="text-center"><span class="badge badge-secondary rounded btn-sm">{{ad.averageratings | number_format(1,',',' ')}}</td>
                    <td>
                        <a href="{{path('admin_ads_edit',{'id':ad.id})}}" class="btn btn-outline-warning rounded"><i class="fas fa-edit"></i></a>
                        <a href="{{path('admin_ads_delete',{'id':ad.id})}}" class="btn btn-outline-danger rounded"><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        
        </table>
    </div>
{% endblock %}
