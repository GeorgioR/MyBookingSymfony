{% extends 'admin/base.html.twig' %}

{% block title %}Gestion des commentaires{% endblock %}

{% block body %}

<main class="container-fluid">
    <h1 class="text-center my-5"> Gestions des commentaires</h1>

    <div class="row">
        <table class="table">
            <thead class="table-dark">
                <th>Id</th>
                <th>Date</th>
                <th>Auteur</th>
                <th>Commentaire</th>
                <th>Note</th>
                <th>Annonce</th>
                <th></th>
                <th></th>
            </thead>
            
            <tbody>
                {% for comment in pagination.data %}

                <tr>
                    <td>{{comment.id}}</td>
                    <td>{{comment.createdAt| date('d/m/Y')}}</td>
                    <td>
                        <img src="{{comment.author.avatar}}" alt=" {{comment.author.fullName}}" class="avatar avatar-medium">
                        {{comment.author.fullName}}
                    </td>
                    <td>{{comment.content}}</td>
                    <td><span class="badge badge-warning">{{comment.ad.averageRatings}}</span></td>
                    <td>{{comment.ad.title}}</td>
                    <td>
                        <a href="{{path('admin_comment_edit',{'id':comment.id})}}" class="btn btn-primary btn-sm"><i class="fas fa-edit"></i></a>
                    </td>
                    <td>
                        <a href="{{path('admin_comment_delete',{'id':comment.id})}}" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i></a>
                    </td>
                </tr>

                {% endfor %}
            
            </tbody>
        </table>
    </div>

                   {# PAGINATION LOOP #}
    {{pagination.display()}}


</main>

{% endblock %}
