{% extends 'admin/base.html.twig' %}

{% block title %}Tableau de bord Admin{% endblock %}

{% block body %}

    <main class="container-fluid mt-5">

        <div class="row">
            <div class="col">
                <div class="card bg-info text-white text-center p-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-4">
                                <i class="fas fa-users fa-3x"></i>
                            </div>
                            <div class="col-8">
                                <h5 class="card-title">{{stats.users}} utilisateurs</h4>
                            </div>
                        </div>
                    </div>
        
                </div>
            </div>


            <div class="col">
                <div class="card bg-dark text-white text-center p-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-4">
                                <i class="fas fa-hotel fa-3x"></i>
                            </div>
                            <div class="col-8">
                                <h5 class="card-title">{{stats.ads}} Annonces</h4>
                            </div>
                        </div>
                    </div>
        
                </div>
            </div>

            <div class="col">
                <div class="card bg-success text-white text-center p-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-4">
                                <i class="fas fa-folder fa-3x"></i>
                            </div>
                            <div class="col-8">
                                <h5 class="card-title">{{stats.bookings}} r√©servations</h4>
                            </div>
                        </div>
                    </div>
        
                </div>
            </div>


            <div class="col">
                <div class="card bg-warning text-white text-center p-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-4">
                                <i class="fas fa-comments fa-3x"></i>
                            </div>
                            <div class="col-8">
                                <h5 class="card-title">{{stats.comments}} avis</h4>
                            </div>
                        </div>
                    </div>
        
                </div>
            </div>


        <div class="row">
            <div class="col">
                <h2 class="m-3 p-3"><i class="fas fa-arrow-up"></i>Annonces les plus populaires</h2>
                <table class="table table-hover ">
                    <thead class="table  table-dark">
                        <th>Annonce</th>
                        <th>Loueur</th>
                        <th>Moyenne</th>
                    </thead>

                    <tbody>
                    {% for ad in bestAds %}
                        <tr>
                            <td>{{ad.title}}</td>
                            <td>
                            
                                <img src="{{ad.avatar}}" alt="" class="avatar avatar-medium"> </br>
                                {{ad.firstname}} {{ad.lastname}}
                            </td>
                            <td>
                                <span class="badge badge-success">
                                    {{ad.note | number_format(1,',','')}}
                                </span>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
       




    
           
            <div class="col">
                <h2 class="m-3 p-3"><i class="fas fa-arrow-down"></i>Annonces les moins populaires</h2>
                <table class="table table-hover ">
                    <thead class="table  table-dark">
                        <th>Annonce</th>
                        <th>Loueur</th>
                        <th>Moyenne</th>
                    </thead>

                    <tbody>
                    {% for ad in worstAds %}
                        <tr>
                            <td>{{ad.title}}</td>
                            <td>
                            
                                <img src="{{ad.avatar}}" alt="" class="avatar avatar-medium"> </br>
                                {{ad.firstname}} {{ad.lastname}}
                            </td>
                            <td>
                                <span class="badge badge-danger">
                                    {{ad.note | number_format(1,',','')}}
                                </span>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        </div>
        
    </main>

{% endblock %}
