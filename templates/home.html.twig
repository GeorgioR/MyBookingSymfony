{% extends 'base.html.twig'%}

    {% block body %}
   
    <main class="container">
     <div class="jumbotron mt-3">
            <h1 class="h1">Site MyBooking</h1>
            <p class="lead">I created this website using Symfony and Bootstrap.</p>
            <hr class="my-4">
            <p>Lorem ipsum dolor sit amet consectetur, adipisicing elit. Velit voluptates recusandae consequuntur voluptatum neque consectetur pariatur. Maiores nobis nemo ab libero, veritatis excepturi illum unde, distinctio ipsam, labore quasi tempora?</p>
            <p class="lead">
                <a class="btn btn-primary btn-lg" href="#" role="button">Plus d'infos</a>
            </p>
        </div>


        <h3 class="h1 mt-3 mb-4">Meilleures Annonces</h3>
        <section class="row">
            {% for data in ads %}
            {% include 'ad/_ad.html.twig' with {'ad':data.annonce} %}
            {% endfor %}
        
        </section>
        <h3 class="h1 mt-3 mb-5">Meilleurs Membres</h3>
        <section class="row">
        {% for data in users %}
        
           
            <article class="col-md-3">

                <div class="card mb-3 ">
                    <h3 class="card-header text-dark bg-warning">{{data.user.fullName}}</h3>
                    
                    <div class="card-body">
                       <img  src="{{data.user.avatar}}" alt="avatar de {{data.user.fullName}}" >
                         <p>{{data.user.introduction}}</p></div>
                   
                        <a href="{{path('user_show',{'slug':data.user.slug})}}" class="btn btn-warning text-dark">Plus d'infos</a>
                    </div>
                    
                 
                    
                 </div>
                    
            
            </article>
        {% endfor %}
        
        
        </section>
    </main>
       


    {% endblock %}
